#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()
{
	float x,i,suma,f,j,n;
	cout<<"Introducir N: ";
	cin>>n;
	cout<<"Introducir x: ";
	cin>>x;
	suma=5;
	for(i=2;i<=n;i=i+2)
	{
		f=1;
		for(j=1;j<=i;j++)
			f=f*j;
		suma=suma+(pow(x,i)/f);
	}
	cout<<"La Suma es: "<<suma;
	getch();
}
