#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()
{
	int n,i,suma,signo;
	cout<<"Hasta que nurmero quiere sumar: ";
	cin>>n;
	suma=0;
	i=1;
	signo=1;
	while(i<=n)
	{
		suma=suma+signo*i;
		i=i+1;
		signo=signo*(-1);
	}
	cout<<"La suma es: "<<suma;
	getch();
}
